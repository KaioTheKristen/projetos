// in√≠cio da fun√ß√£o carrinho
let carrinho = []; // Array Carrinho

// Fun√ß√£o para adicionar itens ao array Carrinho
function adicionarcarrinho() {
    console.log("Adicionar produto no Carrinho");

    let produto = prompt("Produto desejado:");
    carrinho.push(produto);
    console.log("Produto adicionado ao carrinho.");
}

// Fun√ß√£o para remover itens do array Carrinho
function removercarrinho() {
    console.log("Remover produto do Carrinho");

    let produto = prompt("Produto que deseja remover:");
    let index = carrinho.indexOf(produto); // metodo para remover itens a partir de seu nome sem precisar especificar a localiza√ß√£o

    if (index !== -1) {
        carrinho.splice(index, 1);
        console.log("Produto retirado do carrinho com sucesso.");
    } else {
        console.log("Produto n√£o encontrado no carrinho.");
    }
}

// Fun√ß√£o para ver os itens do array Carrinho
function vercarrinho() {
    console.log("\n --- Lista de Produtos ---");

    if (carrinho.length === 0) {
        console.log("Nenhum produto cadastrado");
    } else {
        carrinho.forEach((produto) => {
            console.log(produto);
        });
    }
}

function carrinhohome () {
do{

// Menu inicial do Carrinho
console.log(`
    ================================
   ‚ñè       - üõíCarrinhoüõí -         ‚ñè
   ‚ñè                                ‚ñè
   ‚ñè  0 - Sair do carrinho          ‚ñè
   ‚ñè  1 - Adicionar ao Carrinho     ‚ñè
   ‚ñè  2 - Remover do carrinho       ‚ñè
   ‚ñè  3 - Ver carrinho              ‚ñè
    ================================
`);

opcao = prompt("\nEscolha uma das op√ß√µes:");

switch (opcao) {
    case '0':
        console.log("Saindo do carrinho..."); //adiciona texto na tela ap√≥s escolher a op√ß√£o sair
        break;

    case '1':
        adicionarcarrinho(); // chama a fun√ß√£o adicionar ao carrinho
        break;

    case '2':
        removercarrinho(); // chama a fun√ß√£o remover do carrinho
        break;

    case '3':
         vercarrinho(); // chama a fun√ß√£o ver o carrinho
         break;

    default:
        console.log("Op√ß√£o inv√°lida! Tente novamente."); // op√ß√£o caso o usu√°rio coloque um n√∫mero inv√°lido
        break;
}
}while (opcao !== '0'); // op√ß√£o de fechamento do carrinho
}// fim da fun√ß√£o carrinho

//inicio da fun√ß√£o principal do site
// Fun√ß√£o para simular o acesso ao site
function acessarSite() {
    console.log("Bem-vindo ao Google!");
    let endereco = prompt("Digite o endere√ßo do site: ");
    if (endereco.toLowerCase() === "www.computech.com.br") {
        console.log("Carregando...");
        return true;
    } else {
        console.log("Endere√ßo incorreto.");
        return false;
    }
}

// Fun√ß√£o para mostrar o menu e capturar a escolha do usu√°rio
function mostrarMenu() {
    console.log(`
         ================================
        ‚ñè         Computech              ‚ñè
        ‚ñè                                ‚ñè
        ‚ñè  1 - Navegar pelos produtos    ‚ñè
        ‚ñè  2 - Acessar o Carrinho        ‚ñè
        ‚ñè  3 - Entrar em contato         ‚ñè
        ‚ñè  4 - Sair                      ‚ñè
         ================================
    `);
    let opcao = prompt("Escolha uma op√ß√£o: ");
    return opcao;
}

// Fun√ß√£o principal para controlar o fluxo do programa
function principal() {
    if (acessarSite()) { // S√≥ continua se o acesso ao site for bem-sucedido
        let opcao;
        do {
            opcao = mostrarMenu();
            switch (opcao) {
                case '1':
                    console.log("Navegando pelos produtos...");
                    break;
                case '2':
                    console.log("Acessando o carrinho...");
                    carrinhohome();
                    break;
                case '3':
                    console.log("Entrando em contato...");
                    contato();
                    break;
                case '4':
                    console.log("Saindo...");
                    break;
                default:
                    console.log("Op√ß√£o inv√°lida. Tente novamente.");
            }
        } while (opcao !== '4'); // Repete at√© o usu√°rio escolher sair
    } else {
        console.log("Por favor, acesse o site correto para continuar.");
    }
}
principal();
//fim da fun√ß√£o principal do site

